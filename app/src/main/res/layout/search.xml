<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:id="@+id/bakbtn"
        android:layout_margin="16dp"
        android:src="@drawable/bakarrow"
        android:alpha="0.7"
        android:background="#ffffff"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:alpha="0.7"
        android:background="#ffffff"
        android:layout_marginTop="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/linear1"
        android:layout_alignStart="@+id/linear1" />
       <!--<include-->
        <!--android:id="@id/toolbar"-->
        <!--layout="@layout/toolbar"/>-->

<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:src="@drawable/profile"
    android:id="@+id/view"
  android:layout_marginLeft="16dp"
    android:layout_below="@id/bakbtn"
/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/username"

        android:text="Hi user"
        android:alpha="0.7"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/view"
        android:layout_toRightOf="@+id/view"
        android:layout_alignRight="@+id/linear1"
        android:layout_alignEnd="@+id/linear1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:background="#ffffff"
        android:alpha="0.7"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_below="@+id/view"
        android:layout_margin="10dp"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Jobs"
            android:gravity="center"
            android:id="@+id/jobs"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/edittxtstyles"

            android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittxtstyles"
            android:id="@+id/companies"
            android:gravity="center"
            android:layout_marginBottom="10dp"

            android:hint="Companies"
            android:layout_below="@+id/jobs"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:animateLayoutChanges="true"
            android:background="@drawable/edittxtstyles"
            android:id="@+id/location" />
    </LinearLayout>

   <Button
       android:layout_width="80dp"
       android:layout_height="50dp"
       android:text="Go"
       android:background="@drawable/edittxtstyles"
       android:gravity="center"
       android:alpha="0.7"
       android:layout_marginTop="40dp"
       android:layout_below="@+id/linear1"
       android:layout_centerHorizontal="true"
       android:textAlignment="gravity" />

</RelativeLayout>
